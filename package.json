{
  "name": "nesxtarc",
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build:web": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json && move dist-electron\\main.js dist-electron\\main.cjs && move dist-electron\\preload.js dist-electron\\preload.cjs",
    "build": "npm run build:web && npm run build:electron && npx electron-builder --win",
    "clean": "if exist dist rmdir /s /q dist && if exist dist-electron rmdir /s /q dist-electron && if exist release rmdir /s /q release",
    "preview": "vite preview",
    "electron:start": "electron .",
    "api": "node api/index.js",
    "electron:dev": "concurrently \"npm run dev\" \"npm run api\" \"wait-on http://127.0.0.1:5173 && npm run electron:start\""
  },
  "dependencies": {
    "axios": "^1.7.9",
    "firebase": "^12.8.0",
    "framer-motion": "^11.18.2",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^6.30.3",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.1.0",
    "electron": "^40.2.1",
    "electron-builder": "^24.13.3",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.nesxtarc.app",
    "productName": "NesxtArc",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "protocols": {
      "name": "nesxtarc-protocol",
      "schemes": [
        "nesxtarc"
      ]
    },
    "extraResources": [
      {
        "from": "api",
        "to": "api",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "uninstallDisplayName": "NesxtArc",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true
    }
  }
}