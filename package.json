{
  "name": "nesxtarc",
  "version": "1.0.1",
  "type": "module",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "api": "node api/index.js",
    "build:web": "vite build",
    "build:api": "ncc build api/source.js -o api_dist && move api_dist\\index.js api\\index.js",
    "build:electron": "tsc -p tsconfig.electron.json && node -e \"const fs=require('fs'); if(fs.existsSync('dist-electron/main.js')){fs.renameSync('dist-electron/main.js', 'dist-electron/main.cjs')}; if(fs.existsSync('dist-electron/preload.js')){fs.renameSync('dist-electron/preload.js', 'dist-electron/preload.cjs')}\"",
    "build": "npm run clean && npm run build:api && npm run build:web && npm run build:electron && npx electron-builder --win",
    "clean": "if exist dist rmdir /s /q dist && if exist dist-electron rmdir /s /q dist-electron && if exist release rmdir /s /q release && if exist api_dist rmdir /s /q api_dist"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "electron-updater": "^6.7.3",
    "firebase": "^12.8.0",
    "framer-motion": "^11.18.2",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^6.30.3",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vercel/ncc": "^0.38.4",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.1.0",
    "electron": "^40.2.1",
    "electron-builder": "^24.13.3",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.nesxtarc.app",
    "productName": "NesxtArc",
    "publish": [
      {
        "provider": "github",
        "owner": "rafael2297",
        "repo": "NesxtArc"
      }
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "protocols": {
      "name": "nesxtarc-protocol",
      "schemes": [
        "nesxtarc"
      ]
    },
    "extraResources": [
      {
        "from": "api",
        "to": "api",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "uninstallDisplayName": "NesxtArc",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true
    }
  }
}